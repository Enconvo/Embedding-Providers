{
  "$schema": "https://enconvo.com/schemas/extension.json",
  "name": "embedding",
  "version": "1.1.3",
  "description": "Embedding Engine For RAG",
  "title": "Embedding For Document Chat",
  "icon": "icon.png",
  "author": "EnconvoAI",
  "license": "MIT",
  "categories": [
    "Embedding"
  ],
  "type": "module",
  "commands": [
    {
      "name": "open_ai",
      "title": "OpenAI",
      "description": "Embedding with openAI",
      "icon": "openai.png",
      "mode": "llm",
      "preferences": [
        {
          "name": "modelName",
          "description": "The model to generate the completion.",
          "type": "dropdown",
          "required": false,
          "title": "Model Name",
          "default": "text-embedding-ada-002",
          "data": [
            {
              "title": "text-embedding-ada-002",
              "value": "text-embedding-ada-002"
            },
            {
              "title": "text-embedding-3-small",
              "value": "text-embedding-3-small"
            },
            {
              "title": "text-embedding-3-large",
              "value": "text-embedding-3-large"
            }
          ]
        },
        {
          "name": "openAIApiKey",
          "description": "OpenAI api key",
          "type": "password",
          "required": false,
          "title": "OpenAI Api Key",
          "default": "",
          "defaultProxy": "llm|chat_open_ai",
          "placeholder": "OpenAI Api Key"
        },
        {
          "name": "baseUrl",
          "description": "OpenAI api base url",
          "type": "textfield",
          "required": false,
          "title": "OpenAI Api Base Url",
          "default": "",
          "defaultProxy": "llm|chat_open_ai",
          "placeholder": "OpenAI Api Base Url"
        }
      ]
    },
    {
      "name": "ollama",
      "title": "Local Embeddings",
      "description": "Embedding with Local Embeddings Powered by DistilBERT",
      "icon": "ollama.png",
      "mode": "llm",
      "preferences": []
    },
    {
      "name": "azure_openai",
      "title": "Azure OpenAI",
      "description": "Azure OpenAI",
      "icon": "azure.png",
      "mode": "llm",
      "targetCommand": "embedding/open_ai",
      "preferences": [
        {
          "name": "azureOpenAIApiDeploymentName",
          "description": "Azure OpenAI api deployment name",
          "type": "textfield",
          "required": false,
          "title": "Azure OpenAI Api Deployment Name",
          "default": ""
        },
        {
          "name": "azureOpenAIApiInstanceName",
          "description": "Azure OpenAI api instance name",
          "type": "textfield",
          "required": false,
          "title": "Azure OpenAI Api Instance Name",
          "default": ""
        },
        {
          "name": "azureOpenAIApiVersion",
          "description": "Azure OpenAI api version",
          "type": "textfield",
          "required": false,
          "title": "Azure OpenAI Api Version",
          "default": "2023-07-01-preview"
        },
        {
          "name": "azureOpenAIApiKey",
          "description": "Azure OpenAI api key",
          "type": "password",
          "required": false,
          "title": "Azure OpenAI Api Key",
          "default": "",
          "placeholder": "Azure OpenAI Api Key"
        }
      ]
    }
  ],
  "dependencies": {
    "@enconvo/api": "^0.1.2",
    "langchain": "^0.1.30"
  },
  "devDependencies": {
    "@types/node": "^18.17.14",
    "eslint": "^8.33.0",
    "prettier": "^2.8.3",
    "tsup": "^7.2.0",
    "typescript": "^5.0.4"
  },
  "scripts": {
    "lint": "eslint src",
    "lint:fix": "npm run lint --fix",
    "format": "prettier --write \"**/*.ts\"",
    "format:check": "prettier --list-different \"**/*.ts\"",
    "build": "enconvo",
    "dev": "enconvo --dev"
  }
}